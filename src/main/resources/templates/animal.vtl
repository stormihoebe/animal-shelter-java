#if($animal.getOwnerId() == 0)
  <h3>Available For Adoption Since: $animal.getDoa().substring(0,10)</h3>
  <form class="" action="/animals/$animal.getId()/adopt" method="post">
    <label for="ownerId">Select New Owner</label>
      <select id='ownerId' name='ownerId' type='text'>
        #foreach($customer in $customers)
          <option value="$customer.getId()">$customer.getName()</option>
        #end
      </select>
      <button type="submit" name="button">Add Owner</button>
  </form>
  #else
    <h1>This animal has been adopted!</h1>
